{{#extends 'base'}}

  {{#block 'content'}}
    {{#each result}}
      <div
        class='rounded-lg text-white border bg-indigo-700 w-4/5 lg:w-96 md:w-96 p-5 mb-3'
      >
        <p class='mb-3 text-left'>{{this.value}}</p>
        <hr />
        <p class='mt-3 text-sm text-right mb-3'>
          <i class='far fa-calendar'></i>
          &nbsp;{{dateFormat this.date format='DD-MM-YYYY'}}
        </p>
        {{#if this.discussed}}
          <p class='text-right text-sm mt-2'>
            <i class='fas fa-microphone-alt'></i>&nbsp;Discussed on
            {{dateFormat this.discussed_date}}!
          </p>
        {{else}}
          <div class='text-right text-sm mt-2 mb-0'>
            <form id='discussion' method='get' action='/discuss/{{this._id}}'>
              <button class='fas fa-check-circle' type='submit'></button>
            </form>
          </div>
        {{/if}}
      </div>
    {{/each}}
  {{/block}}

{{/extends}}